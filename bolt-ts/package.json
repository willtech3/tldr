{
  "name": "tldr-bolt-api",
  "version": "0.1.0",
  "description": "TLDR Slack AI App - Bolt TypeScript API Lambda",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=bundle/index.js --external:@aws-sdk/*",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "clean": "rm -rf dist bundle node_modules",
    "package": "npm run bundle && cd bundle && zip -r ../function.zip ."
  },
  "dependencies": {
    "@slack/bolt": "^4.1.0",
    "@aws-sdk/client-sqs": "^3.700.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
